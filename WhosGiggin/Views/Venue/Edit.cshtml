@model WhosGiggin.Models.VenueModel

@{
    ViewBag.Title = "Edit Venue - " + Model.Name;
}

<h2>Edit Venue - @Model.Name</h2>

@using (Html.BeginForm("Edit", "Venue", FormMethod.Post, new { @class = "form-horizontal span12" }))
{
    @Html.ValidationSummary(true)
    <fieldset>

        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateOrEdit", Model)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary" type="submit" value="Save" title="Save">Save</button>
                @Html.ActionLink("Cancel", "Index", new { }, new { @role = "button", @class = "btn btn-danger" })
            </div>
        </div>
    </fieldset>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}