@model WhosGiggin.Models.VenueModel

@{
    ViewBag.Title = "Create";
}

<h2>Venue</h2>

@using (Html.BeginForm("Create", "Venue", FormMethod.Post, new { @class = "form-horizontal span12" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create</legend>

        @Html.Partial("_CreateOrEdit", Model)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary" type="submit" value="Create" title="Create">Create</button>
                @Html.ActionLink("Cancel", "Index", new { }, new { @role = "button", @class = "btn btn-danger" })
            </div>
        </div>
    </fieldset>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

