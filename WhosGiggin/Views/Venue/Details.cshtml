@model WhosGiggin.Models.VenueModel

@{
    ViewBag.Title = "Venue Details - " + Model.Name;
}

<h2>@Model.Name</h2>

<fieldset>
    <legend>Details</legend>

    <div class="display-label">City</div>
    <div class="display-field">@Model.City</div>

    <div class="display-label">Region</div>
    <div class="display-field">@Model.Region</div>

    <div class="display-label">Address</div>
    <div class="display-field">@Model.Address</div>

    <div class="display-label">Postcode</div>
    <div class="display-field">@Model.Postcode</div>

    <div class="display-label">ContactPhone</div>
    <div class="display-field">@Model.ContactPhone</div>

    <div class="display-label">WebsiteUrl</div>
    <div class="display-field">@Model.WebsiteUrl</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">PrimaryImageUrl</div>
    <div class="display-field">@Model.PrimaryImageUrl</div>
</fieldset>
<p class="row">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @role = "button", @class = "btn btn-info" })
    @Html.ActionLink("Back to List", "Index", null, new { @role = "button", @class = "btn btn-info" })
</p>



