@model WhosGiggin.Models.EventModel

@{
    ViewBag.Title = "Add Event";
}

<h2>Add Event</h2>

@using (Html.BeginForm("Create", "Event", FormMethod.Post, new { @class = "form-horizontal" })) 
{
    @Html.ValidationSummary(true)
    <fieldset>

		@Html.Partial("_CreateOrEdit", Model)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary" type="submit" value="Create" title="Create">Create</button>
                @Html.ActionLink("Cancel", "Index", new { }, new { @role = "button", @class = "btn btn-danger" })
            </div>
        </div>
    </fieldset>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}