@model WhosGiggin.Models.EventModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>EventModel</legend>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">StartDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.StartDate)</div>

    <div class="display-label">FinishDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.FinishDate)</div>

    <div class="display-label">Venue</div>
    <div class="display-field">@(Model.Venue == null ? "None" : Model.Venue.Name)</div>

    <div class="display-label">Restrictions</div>
    <div class="display-field">@Model.Restrictions</div>

    <div class="display-label">WebsiteUrl</div>
    <div class="display-field">@Model.WebsiteUrl</div>

    <div class="display-label">ListedBy</div>
    <div class="display-field">@Model.ListedBy</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">PrimaryImageUrl</div>
    <div class="display-field">@Model.PrimaryImageUrl</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


