@model WhosGiggin.Models.EventModel

@{
    ViewBag.Title = @Model.Title;
}

<h2>@Model.Title</h2>

<fieldset>

    <div class="row">
        <div class="display-label col-sm-2">Title</div>
        <div class="display-field col-sm-10">@Model.Title</div>
    </div>
    <div class="row">
        <div class="display-label col-sm-2">Start Date</div>
        <div class="display-field col-sm-10">@String.Format("{0:g}", Model.StartDate)</div>
    </div>
    <div class="row">
        <div class="display-label col-sm-2">Finish Date</div>
        <div class="display-field col-sm-10">@String.Format("{0:g}", Model.FinishDate)</div>
    </div>
    <div class="row">
        <div class="display-label col-sm-2">Venue</div>
        <div class="display-field col-sm-10">

            @if (Model.Venue == null)
            {
                @:"None"
                }
            else
            {
                @Html.ActionLink(Model.Venue.Name, "Details", "Venue", new { id = Model.Venue.Id }, null)
            }
        </div>
    </div>
    <div class="row">
        <div class="display-label col-sm-2">Restrictions</div>
        <div class="display-field col-sm-10">@Model.Restrictions</div>
    </div>
    <div class="row">
        <div class="display-label col-sm-2">Website</div>
        <div class="display-field col-sm-10">
            @if (Model.WebsiteUrl != null) { 
                <a href="@Model.WebsiteUrl">@Model.WebsiteUrl</a>
            }
            </div>
        </div>
        <div class="row">
            <div class="display-label col-sm-2">Listed By</div>
            <div class="display-field col-sm-10">@Model.ListedBy</div>
        </div>
        <div class="row">
            <div class="display-label col-md-2">Description</div>
            <div class="display-field col-sm-10">@Model.Description</div>
        </div>
        <div class="row">
            <div class="display-label col-sm-2">Image</div>
            <div class="display-field col-sm-10">
                @if (Model.PrimaryImageUrl != null) { 
                    <img src="@Model.PrimaryImageUrl" />}
                </div>
            </div>

        </fieldset>
        <p class="row">
            <div class="col-sm-2">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @role = "button", @class = "btn btn-info" })
            </div>   @Html.ActionLink("Back to List", "Index", null, new { @role = "button", @class = "btn btn-info" })
        </p>


