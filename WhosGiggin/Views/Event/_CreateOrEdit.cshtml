@model WhosGiggin.Models.EventModel

<div class="form-group">
    @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })

    <div class="col-sm-6">
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Venue, new { @class = "col-sm-2 control-label" })

    <div class="col-sm-6">
        @Html.DropDownList("VenueId", (SelectList)ViewData["Venues"], new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VenueId, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">

    @Html.LabelFor(model => model.StartDate, new { @class = "col-sm-2 control-label" })

    <div class="col-sm-6">
        <div id="datetimepickerstart" class="input-group date datetimepickerenabled">
            @Html.EditorFor(model => model.StartDate, new { @class = "form-control" })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar" data-time-icon="glyphicon-time" data-date-icon="glyphicon-calendar"></span>

            </span>
        </div>
        @Html.ValidationMessageFor(model => model.StartDate, string.Empty, new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">

    @Html.LabelFor(model => model.FinishDate, new { @class = "col-sm-2 control-label" })


    <div class="col-sm-6">
        <div id="datetimepickerfinish" class="input-group date datetimepickerenabled">
            @Html.EditorFor(model => model.FinishDate, new { @class = "form-control" })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>

            </span>
        </div>
        @Html.ValidationMessageFor(model => model.FinishDate, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Restrictions, new { @class = "col-sm-2 control-label" })

    <div class="col-sm-6">
        @Html.TextBoxFor(model => model.Restrictions, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Restrictions, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.WebsiteUrl, new { @class = "col-sm-2 control-label" })

    <div class="col-sm-6">
        @Html.TextBoxFor(model => model.WebsiteUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.WebsiteUrl, string.Empty, new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 control-label" })

    <div class="col-sm-6">
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "6" })
        @Html.ValidationMessageFor(model => model.Description, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.PrimaryImageUrl, new { @class = "col-sm-2 control-label" })

    <div class="col-sm-6">
        @Html.TextBoxFor(model => model.PrimaryImageUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PrimaryImageUrl, string.Empty, new { @class = "text-danger" })
    </div>
</div>
